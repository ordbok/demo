{
    "private": true,
    "name": "@ordbok/demo",
    "version": "0.0.1",
    "author": "ORDBOK contributors",
    "license": "MIT",
    "description": "Implementation example",
    "keywords": [
        "dictionary",
        "ordbok"
    ],
    "bugs": "https://github.com/ordbok/core/issues",
    "homepage": "https://github.com/ordbok/demo#readme",
    "repository": "https://github.com/ordbok/demo.git",
    "devDependencies": {
        "@ordbok/core": "https://github.com/ordbok/core.git",
        "requirejs": "^2.3.6",
        "typescript": "^3.4.1"
    },
    "engines": {
        "node": ">=8.1.0"
    },
    "main": "docs/demo.js",
    "scripts": {
        "build": "npm run clean && npm run build-1 && npm run build-2 && npm run build-3 && npm run build-4",
        "build-1": "tsc --build tsconfig.json",
        "build-2": "r_js -o rjsconfig.js",
        "build-3": "ordbok-assembler ../translations docs/translations",
        "build-4": "cp -v node_modules/requirejs/require.js docs/",
        "clean": "rm -rf docs",
        "watch": "tsc --build tsconfig.json --watch"
    }
}
